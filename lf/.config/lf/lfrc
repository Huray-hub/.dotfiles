# Basic Settings
set ratios 1:2:3  
set ignorecase true
set icons true
set scrolloff 8 
set relativenumber
set shell zsh

set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd setwallpaper %feh --bg-fill --no-fehbg "$f" 

cmd zread %zaread "$f" &

# Extract the current file with the right command
# (xkcd link: https://xkcd.com/1168/)
cmd extract ${{
    set -f
    case $f in
        *.zip) unzip $f;;
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

# Convert office files to pdf
cmd office_to_pdf %libreoffice --convert-to pdf "$fx" --headless

# Compress current file or selected files with zip
cmd zip ${{
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}

# Execute exe
cmd execute_exe ${{
	wine "$f"
}}

# Trash bindings
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash-put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

cmd restore_trash ${{
  trash-restore
}}


# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
