super + Return
  $TERMINAL

alt + space
  rofi -show 
  /* rofi -show drun -modi drun */

/* Caps_Lock */
/*   Escape */

# Volume controls
XF86AudioMute
  pamixer -t

XF86AudioLowerVolume
  pamixer -d 7 

XF86AudioRaiseVolume
  pamixer -i 7 

# Brightness controls
XF86MonBrightnessDown
  brillo -q -U 10

XF86MonBrightnessUp
  brillo -q -A 10

# Calculator
XF86Calculator
  rofi -show calc


# Screenshot
Print 
  flameshot gui

# Toggle bt headphones connection
super + k
  bt-toggle-headphones.sh
